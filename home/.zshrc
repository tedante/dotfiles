function cjsBeInstall() {
	if [[ ! -d ".git" ]]; then
		git init
	fi
	
	if [[ ! -f ".gitignore" ]]; then
		cp ~/development/dotfiles/templates/node-gitignore ./.gitignore
	fi

	if [[ ! -f "./package.json" ]]; then
		npm init -y
		npm i express jsonwebtoken bcryptjs pg sequelize
		npm i -D sequelize-cli nodemon
	fi

	if [[ ! -d "models" ]]; then
		npx sequelize-cli init
	fi

	if [[ ! -f "app.js" ]]; then
		cp ~/development/dotfiles/templates/cjs-app.js ./app.js
		mkdir ./routes ./controllers ./views
		cp ~/development/dotfiles/templates/cjs-router.js ./routes/index.js
	fi	
}

function jsonServer() {
	if [ ! -z "$1" ] 
	then
		json-server --watch $1
	else
		json-server --watch db.json
	fi
}

function sequelizeReset() {
	s db:drop
	s db:create
	s db:migrate
	s db:seed:all
}

function gitLog() {
	git log --pretty=format:"%C(magenta)%h%Creset -%C(red)%d%Creset %s %C(dim green)(%cr)%Creset %C(blue)[%an]" --abbrev-commit -30
}

function gc() {
	git add .
	git commit -m "$1"
}

function gp() {
	git push
}

function runNodemon() {
	if [ `npm list | grep -c nodemon` -eq 0 ]; then
		echo "==================="
		echo "Nodemon is not installed on your machine"
		echo "Installing nodemon"

		npm install -D nodemon

		echo "Nodemon installed"
		echo "==================="
  fi

	echo "Running 'npx nodemon $1'"
	npx nodemon "$1"
}

